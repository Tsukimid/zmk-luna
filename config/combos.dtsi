compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
  };

// BSPC, ENTER, CAPS
COMBO(bspc, &kp BSPC, 6 7, luna, 100)
COMBO(cbspc, &kp LC(BSPC), 1 2, luna, 100)
COMBO(ctrlw, &kp LC(W), 1 2, luna, 100)
COMBO(enter, &kp J, 1 2, luna, 100)
COMBO(caps, &kp J, 1 2, luna, 100)
COMBO(capsword, &kp J, 1 2, luna, 100)

COMBO(z, &kp Z, 1 3, luna, 100)
COMBO(j, &kp J, 2 3, luna, 100)
COMBO(v, &kp V, 1 2, luna, 100)
COMBO(q, &kp Q, 1 2, luna, 100)
COMBO(dot, &kp DOT, 1 2, luna, 100)


